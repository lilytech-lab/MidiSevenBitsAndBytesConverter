@page "/"
@inject IStringLocalizer<AppLocalization> Loc

<PageTitle>Home</PageTitle>

<MudPaper Class="ma-2 pa-2">
    <MudText Typo="Typo.h4">How to Use</MudText>
    <MudPaper Elevation="0" Class="ma-2">
        <MudText Typo="Typo.h6">7 bits to 8 bits</MudText>
        <MudText Class="pl-8">@Loc["HowToUse7BitsTo8Bits"]</MudText>
    </MudPaper>
    <MudPaper Elevation="0" Class="ma-2">
        <MudText Typo="Typo.h6">8 bits to 7 bits</MudText>
        <MudText Class="pl-8">@Loc["HowToUse8BitsTo7Bits"]</MudText>
    </MudPaper>
</MudPaper>

<MudText Class="pa-2">@message</MudText>

<MudPaper Class="pa-2 ma-2 mb-8">
    <MudTextField T="string" @bind-Value="sevenBitsStr" Label="@Loc["SysEx7BitsByteArray"]" Variant="Variant.Text" Clearable AutoGrow Lines="10"
        Style="font-family:'Courier New', Courier, Monaco, Menlo, Consolas, 'Lucida Console', 'ＭＳ ゴシック', 'MS Gothic', monospace;" />
</MudPaper>

<MudStack Row Class="pa-4">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSevenToEightClicked">
        <MudText>↓ 7 to 8</MudText>
    </MudButton>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnEightToSevenClicked">
        <MudText>↑ 8 to 7</MudText>
    </MudButton>
</MudStack>

<MudPaper Class="d-flex flex-row pa-2 ma-2 mb-8">
    <MudTextField T="string" @bind-Value="EightBitsStr" Label="@Loc["8BitsByteArray"]" Variant="Variant.Outlined" Clearable AutoGrow Lines="10"
        Style="font-family:'Courier New', Courier, Monaco, Menlo, Consolas, 'Lucida Console', 'ＭＳ ゴシック', 'MS Gothic', monospace;"
        Class="flex-grow-3 px-2"/>
    <MudTextField T="string" @bind-Value="@asciiStr" Label="Ascii" ReadOnly="true" Variant="Variant.Outlined" Clearable AutoGrow Lines="10"
        Style="font-family:'Courier New', Courier, Monaco, Menlo, Consolas, 'Lucida Console', 'ＭＳ ゴシック', 'MS Gothic', monospace;"
        Class="flex-grow-2 px-2"/>
</MudPaper>

